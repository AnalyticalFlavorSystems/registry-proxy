<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h3 class="text-center">Repositories</h3>
        </div>
      </div>
      <br />
      <div class="col-md-8 col-md-offset-2">
          <table id="repositories" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{range .repositories}}
              <tr>
                <td>{{.}}</td>
                <td class="text-center"><a class="btn btn-sm btn-info" href="/ui/{{.}}">View</a></td>
              </tr>
              {{end}}
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
